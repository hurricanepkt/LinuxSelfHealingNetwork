
#!/bin/bash
x=`ping -c1 google.com 2>&1 | grep unknown`
if [ ! "$x" = "" ]; then
        echo "It's down!! Attempting to restart."
        ifdown wan0
		ifup wan0
		/etc/init.d/is-dhcp-server restart
	echo "Restarted DHCP"
	/etc/init.d/bind9 restart
	echo "Restarted Bind9"
else 
	echo "Ok : $(date) $(date -u)"
fi
